mixin post(item)
	article.article-item
		.article-container
			a(href='/p/#{item._id}')
				h1.post-title #{item.title}
			div.post-meta 
				span.post-time  发布于 
					a(href='/',targer='_blank') #{moment(item.meta.createAt).calendar()}
				span.update-time   &nbsp | &nbsp 最后编辑于 
					a(href='/',targer='_blank') #{moment(item.meta.updateAt).calendar()}
				//- span.post-category &nbsp | &nbsp 归类于
				//- 	a(href='/',targer='_blank') #{item.category}
				span.tags  &nbsp | &nbsp 标签:
					each it in item.tags 
						a(href='/tag/#{it}',targer='_blank') &nbsp  #{it}
			div.post-body
				p #{item.summary}

