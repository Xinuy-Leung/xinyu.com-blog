doctype
html
	head
		meta(charset="utf-8")
		title #{title}
		link(href='//cdn.bootcss.com/bootstrap/4.0.0-alpha.2/css/bootstrap.css',rel='stylesheet')
	body
		.container
			form.form-horizontal(method='post',action='/xinyu/blog/create')
				input(type='hidden',name='blog[_id]',value='#{blog._id}')
				.form-group
					label.col-sm-2.control-label(for='inputTitle') Title 
					.col-sm-10
						input#inputTitle.form-control(type='text', placeholder='Title',name='blog[title]',value='#{blog.title}')
				.form-group
					label.col-sm-2.control-label(for='inputTags') Tags
					.col-sm-10
						input#inputTags.form-control(type='text', placeholder='Tags',name='blog[tags]',value="#{blog.tags.join('-')}")
				.form-group
					label.col-sm-2.control-label(for='inputSummary') Summary
					.col-sm-10
						input#inputSummary.form-control(type='text', placeholder='Summary',name='blog[summary]',value='#{blog.summary}')
				.form-group
					label.col-sm-2.control-label(for='inputCategory') Category
					.col-sm-10
						input#inputCategory.form-control(type='text', placeholder='Category',name='blog[category]',value='#{blog.category}')
				.form-group
					label.col-sm-2.control-label(for='inputContent') Content
					.col-sm-10
						textarea#inputContent.form-control(row='10',placeholder='Content',name='blog[content]',value='#{blog.content}')
				.form-group
					.col-sm-2
					.col-sm-10
						button.btn.btn-default(type='submit') Confirm identity